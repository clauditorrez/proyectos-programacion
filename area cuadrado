#include "stdafx.h"
#include "stdio.h"
#include "conio.h"

void main()
{
   float lado,area;
   printf("\t calculo del area del cuadrado \n");
   printf("\t ==============================\n\n\n");
   printf("ingrese lado: ");
   scanf("%f",&lado);
   if (lado >0)
   {area= lado*lado;
   printf("\nel area es:%f",area);
   }
   else
   {printf("\nerror: no se acepta lado negativo");
   }
   getch();
   
}
