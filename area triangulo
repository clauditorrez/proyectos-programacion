#include "stdafx.h"
#include "stdio.h"
#include "conio.h"

void main()
{
   float base,altura,area;
   printf("\t calculo del area del triangulo \n");
   printf("\t ==============================\n\n\n");
   printf("ingrese la base: ");
   scanf("%f",&base);
   printf("ingrese la altura : ");
   scanf("%f",&altura);
   if ((base>0)&&(altura>0))
   {
   //calcular area
   area=(base*altura)/2;
   printf("\nel are es:%f",area);
   }
   else
   {printf("\nerror: no se acepta base y altura negativa");
   }
   getch();
   
}
